<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/layout2"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:onClick="onMessageMark"
  android:longClickable="true"
  android:clickable="true"
  android:background="@color/colorTransparent"
  android:paddingTop="10dp"
  android:paddingLeft="10dp"
  android:paddingRight="10dp"
  android:paddingBottom="5dp">

  <de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/imageView3"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_alignBottom="@+id/frameLayout2"
    android:layout_alignParentStart="true"
    android:clickable="true"
    android:onClick="onFriendImgClick"
    android:src="@drawable/default_avata" />


  <FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="31dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/rounded_corner1"
    android:minHeight="115dp"
    android:id="@+id/frameLayout2">

    <TextView
      android:id="@+id/friendContactName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="5dp"
      android:layout_marginStart="20dp"
      android:layout_marginTop="10dp"
      android:background="@drawable/rounded_corner2"
      android:padding="10dp"
      android:text="a"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:textColor="#000" />

    <TextView
      android:id="@+id/friendContactPhone"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="5dp"
      android:layout_marginStart="20dp"
      android:layout_marginTop="60dp"
      android:background="@drawable/rounded_corner2"
      android:padding="10dp"
      android:text="s"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:textColor="#000" />
  </FrameLayout>


</RelativeLayout>