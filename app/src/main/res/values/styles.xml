<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">#03A9F4</item>
    <item name="colorPrimaryDark">#0288D1</item>
    <item name="colorAccent">#4fa881</item>
    <!-- set Can use Activity transitions -->
    <item name="android:windowContentTransitions">true</item>
    <!--&lt;!&ndash;sinch &ndash;&gt;-->
    <!--<item name="windowActionBar">true</item>-->
    <!--<item name="windowNoTitle">true</item>-->

    <item name="android:actionButtonStyle">@style/myActionButtonStyle</item>
    <item name="actionButtonStyle">@style/myActionButtonStyle</item>
  </style>

  <style name="myActionButtonStyle" parent="Widget.AppCompat.ActionButton">
    <item name="android:minWidth">24dp</item>
    <item name="android:maxWidth">48dp</item>
    <item name="android:width">36dp</item>
  </style>

  <!-- Purple theme -->
  <style name="AppPurpleTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">#9745ac</item>
    <item name="colorPrimaryDark">#8b3e9f</item>
    <item name="colorAccent">#cb78e1</item>
    <!-- set Can use Activity transitions -->
    <item name="android:windowContentTransitions">true</item>
    <!--&lt;!&ndash;sinch &ndash;&gt;-->
    <!--<item name="windowActionBar">true</item>-->
    <!--<item name="windowNoTitle">true</item>-->
  </style>

  <!-- Dark blue theme -->
  <style name="AppDarkBlueTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">#0f2143</item>
    <item name="colorPrimaryDark">#01050d</item>
    <item name="colorAccent">#2956a9</item>
    <!-- set Can use Activity transitions -->
    <item name="android:windowContentTransitions">true</item>
    <!--&lt;!&ndash;sinch &ndash;&gt;-->
    <!--<item name="windowActionBar">true</item>-->
    <!--<item name="windowNoTitle">true</item>-->
  </style>

  <!-- Blue theme -->
  <style name="AppBlueTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">#36ace3</item>
    <item name="colorPrimaryDark">#1e6281</item>
    <item name="colorAccent">#2956a9</item>
    <!-- set Can use Activity transitions -->
    <item name="android:windowContentTransitions">true</item>
    <!--&lt;!&ndash;sinch &ndash;&gt;-->
    <!--<item name="windowActionBar">true</item>-->
    <!--<item name="windowNoTitle">true</item>-->
  </style>

  <!-- Orange theme -->
  <style name="AppOrangeTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">#f1754d</item>
    <item name="colorPrimaryDark">#af573a</item>
    <item name="colorAccent">#fca487</item>
    <!-- set Can use Activity transitions -->
    <item name="android:windowContentTransitions">true</item>
    <!--&lt;!&ndash;sinch &ndash;&gt;-->
    <!--<item name="windowActionBar">true</item>-->
    <!--<item name="windowNoTitle">true</item>-->
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="MyThemeNoActionbar" parent="AppTheme">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="android:windowDrawsSystemBarBackgrounds">true</item>
  </style>

  <style name="EditTextTintTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="colorPrimaryDark">#0288D1</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

  <style name="TextLabel" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
    <item name="colorControlActivated">@color/colorBluePrimaryDark</item>
  </style>

  <style name="Translucent" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="windowNoTitle">true</item>
    <item name="colorPrimary">#ffffff</item>
    <item name="colorPrimaryDark">@color/colorDarkBluePrimary</item>
    <item name="colorAccent">#ffffff</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowIsTranslucent">false</item>
  </style>

  <style name="TranslucentBackground" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="windowNoTitle">true</item>
    <item name="colorPrimary">#ffffff</item>
    <item name="colorPrimaryDark">@color/colorDarkBluePrimary</item>
    <item name="colorAccent">#ffffff</item>
    <item name="android:windowBackground">@color/colorDarkBluePrimary</item>
  </style>
</resources>
